<?xml version= "1.0"?>

<general>
  <gravity>1000</gravity>
  <friction>3000</friction>
</general>

<fastman>
  <!--tiles per second-->
  <max_horiz_speed>15</max_horiz_speed>
  <max_vert_speed>20</max_vert_speed>
  <!--tiles to reach max horiz speed-->
  <accel>5</accel>
  <!--tiles cleared by max jump-->
  <jump_height>2.5</jump_height>
  <!--applied to acceleration in air-->
  <air_multiplier>0.3</air_multiplier>
</fastman>

<jumpman>
  <!--tiles per second-->
  <max_horiz_speed>5</max_horiz_speed>
  <max_vert_speed>20</max_vert_speed>
  <!--tiles to reach max horiz speed-->
  <accel>2</accel>
  <!--tiles cleared by max jump-->
  <jump_height>7</jump_height>
  <!--applied to acceleration in air-->
  <air_multiplier>2.0</air_multiplier>
</jumpman>
